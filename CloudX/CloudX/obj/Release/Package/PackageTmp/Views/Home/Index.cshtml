<!DOCTYPE HTML>
<link href="~/Content/Site.css" rel="stylesheet" />
<html xmlns="http://www.w3.org/1999/xhtml" lang="zh-CN">

<head>
    <title>主页 - CloudX - Connect Everything!</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <link rel="stylesheet" type="text/css" href="~/Content/style.css" /> 
  

    <script src="~/Scripts/move.js"></script>
    <script src="~/Scripts/move_s.js"></script>
    <script>
        window.onload = function () {
            var counter = 0;
            var oDiv = document.getElementById("navitem");
            var oLi = oDiv.getElementsByTagName("li");
            var oDiv_download = document.getElementById("download_button");
            var oDiv_android = document.getElementById("android");
            var oDiv_windows_phone = document.getElementById("windows_phone");
            var oDiv_ios = document.getElementById("ios");
            var oDiv_windows = document.getElementById("windows");
            var oDiv_linux = document.getElementById("linux");
            var oDiv_mac = document.getElementById("mac");
            //导航栏js
            for(var i = 0;i < oLi.length;i++)
            {
                oLi[i].onmouseover = function () {
                    this.style.background = "url(../Images/nav.png)";
                };
                if (i != 0)
                {
                    oLi[i].onmouseout = function () {
                        this.style.backgroundImage = "none";
                }
                };
            }
            //下载按钮js
            oDiv_download.onclick = function () {
                if (counter % 2 == 0)
                {
                    start_Move(oDiv_android, { left: 590, top: 360 })
                    start_Move(oDiv_ios, { left: 710, top: 360 })
                    start_Move(oDiv_linux, { left: 540 })
                    start_Move(oDiv_mac, { left: 760 })
                    start_Move(oDiv_windows, { left: 590, top: 540 })
                    start_Move(oDiv_windows_phone, { left: 710, top: 540 })
                }
                else
                {
                    start_Move(oDiv_android, { left: 650, top: 450 })
                    start_Move(oDiv_ios, { left: 650, top: 450 })
                    start_Move(oDiv_linux, { left: 650 })
                    start_Move(oDiv_mac, { left: 650 })
                    start_Move(oDiv_windows, { left: 650, top: 450 })
                    start_Move(oDiv_windows_phone, { left: 650, top: 450 })
                }
                counter++;
            };
            //下载按钮js
            oDiv_download.onclick = function () {
                if (counter % 2 == 0) {
                    start_Move(oDiv_android, { left: 590, top: 360 })
                    start_Move(oDiv_ios, { left: 710, top: 360 })
                    start_Move(oDiv_linux, { left: 540 })
                    start_Move(oDiv_mac, { left: 760 })
                    start_Move(oDiv_windows, { left: 590, top: 540 })
                    start_Move(oDiv_windows_phone, { left: 710, top: 540 })

                    oDiv_android.onclick = function () {
                        window.location = "https://downfiles.blob.core.chinacloudapi.cn/file/CloudX.apk";
                    }
                    oDiv_windows.onclick = function () {
                        window.location = "https://downfiles.blob.core.chinacloudapi.cn/file/CloudX.zip";
                    }
                    oDiv_ios.onclick = function () {
                        alert("请静待我们的开发人员开发出来");
                    }
                    oDiv_linux.onclick = function () {
                        alert("请静待我们的开发人员开发出来");
                    }
                    oDiv_mac.onclick = function () {
                        alert("请静待我们的开发人员开发出来");
                    }
                    oDiv_windows_phone.onclick = function () {
                        alert("请静待我们的开发人员开发出来");
                    }
                }
                else {
                    start_Move(oDiv_android, { left: 650, top: 450 })
                    start_Move(oDiv_ios, { left: 650, top: 450 })
                    start_Move(oDiv_linux, { left: 650 })
                    start_Move(oDiv_mac, { left: 650 })
                    start_Move(oDiv_windows, { left: 650, top: 450 })
                    start_Move(oDiv_windows_phone, { left: 650, top: 450 })
                }
                counter++;
            };

                
                
        }
        
    </script>
</head>

<body>
